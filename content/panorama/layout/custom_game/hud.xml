<root>
    <scripts>
        <!-- Included JS script files go here -->
        <include src="file://{resources}/scripts/custom_game/hud.js" />
    </scripts>

    <styles>
        <!-- Included css style files go here -->
        <include src="s2r://panorama/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/hud.css" />
    </styles>
    
    <snippets>
        <snippet name="GameProgression">
            <Panel class="GameProgression" hittest="false">
                <Label id="WaveCounter"/>
                <Label id="TimeBeforeNextWave"/>
            </Panel>
        </snippet>

        <snippet name="ArtifactPickers">
            <Panel class="ArtifactPickers">
                <Panel class="ArtifactPicker">
                    <Label class="Artefact_Name" id="Artifact_Name1"/>
                    <Image class="Artefact_Image" id="Artifact_Image1"/>
                    <Label class="Artefact_Description" id="Artifact_Description1"/>
                </Panel>
                <Panel class="ArtifactPicker">
                    <Label class="Artefact_Name" id="Artifact_Name2"/>
                    <Image class="Artefact_Image" id="Artifact_Image2"/>
                    <Label class="Artefact_Description" id="Artifact_Description2"/>
                </Panel>
                <Panel class="ArtifactPicker">
                    <Label class="Artefact_Name" id="Artifact_Name3"/>
                    <Image class="Artefact_Image" id="Artifact_Image3"/>
                    <Label class="Artefact_Description" id="Artifact_Description3"/>
                </Panel>
            </Panel>
        </snippet>
    </snippets>

    <Panel class="MainHud" hittest="false">
        <Panel id="GameProgressionPanel" hittest="false"/>
        <Panel id="ArtifactPickersPanel" hittest="false"/>
    </Panel>
</root>
